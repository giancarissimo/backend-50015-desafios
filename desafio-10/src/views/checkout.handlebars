{{>header}}
<section class="section_checkout">
    <h1>Ready to place your order? <br>Let's make sure everything's right.</h1>
    <ol class="cart_productList">
        {{#each products }}
        <li class="cart_product">
            <div class="cart_product_img">
                <img src="../assets/images/store/{{this.product.thumbnails}}" alt="{{this.product.title}}">
            </div>
            <div class="cart_product_text">
                <div class="cart_product_text_title">
                    <h2>{{this.product.title}}</h2>
                </div>
                <div class="cart_product_text_price_mobile">
                    <span>{{this.quantity}}</span>
                    <p>${{this.product.price}}</p>
                </div>
                <span class="cart_product_text_span">{{this.quantity}}</span>
                <p class="cart_product_text_p">${{this.product.price}}</p>
            </div>
        </li>
        {{/each}}
    </ol>
    <div class="cart_totalProducts">
        <div class="cart_totalProducts_subtotal">
            <span>Subtotal</span>
            <span>${{totalPurchase}}</span>
        </div>
        <div class="cart_totalProducts_shipping">
            <span>Shipping</span>
            <span>FREE</span>
        </div>
        <div class="cart_totalProducts_total">
            <p>Total</p>
            <p>${{totalPurchase}}</p>
        </div>
    </div>
</section>
<section class="section_checkout_options">
    <div class="checkout_options_container">
        <h2>What step would you like to be next?</h2>
        <div class="checkout_options">
            <a class="checkout_option_cart" href="/carts/{{user.cart}}">
                <svg height="44" viewBox="0 0 14 44" width="14" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="m11.3535 16.0283h-1.0205a3.4229 3.4229 0 0 0 -3.333-2.9648 3.4229 3.4229 0 0 0 -3.333 2.9648h-1.02a2.1184 2.1184 0 0 0 -2.117 2.1162v7.7155a2.1186 2.1186 0 0 0 2.1162 2.1167h8.707a2.1186 2.1186 0 0 0 2.1168-2.1167v-7.7155a2.1184 2.1184 0 0 0 -2.1165-2.1162zm-4.3535-1.8652a2.3169 2.3169 0 0 1 2.2222 1.8652h-4.4444a2.3169 2.3169 0 0 1 2.2222-1.8652zm5.37 11.6969a1.0182 1.0182 0 0 1 -1.0166 1.0171h-8.7069a1.0182 1.0182 0 0 1 -1.0165-1.0171v-7.7155a1.0178 1.0178 0 0 1 1.0166-1.0166h8.707a1.0178 1.0178 0 0 1 1.0164 1.0166z">
                    </path>
                </svg>
                <span>Modify My Bag</span>
            </a>
            <form class="checkout_option_payment" action="/api/carts/{{user.cart}}/purchase" method="post">
                <button type="submit">
                    <img src="../assets/images/checkout/apple_card_icon.png" alt="Apple Card Icon">
                    Place Your Order
                </button>
            </form>
        </div>
    </div>
</section>
{{>cartHelp}}
{{>cartNews}}
{{>footer}}