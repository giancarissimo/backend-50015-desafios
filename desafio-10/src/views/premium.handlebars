{{>header}}
<section>
    <h1>Welcome to Premium section, {{user.username}}!</h1>
    <span>Aqu√≠ podras publicar, administrar y actualizar tus productos en nuestro sitio!</span>
    <p style="display: none;" id="userEmail">{{user.email}}</p>
    <p style="display: none;" id="userRole">{{user.role}}</p>
    <form id="premium_productForm">
        <input type="text" id="title" name="title" required placeholder="Title">

        <textarea id="description" name="description" required placeholder="Description"></textarea>

        <input type="text" id="category" name="category" required placeholder="Category">

        <input type="number" id="price" name="price" required placeholder="Price">

        <input type="text" id="img" name="thumbnails" placeholder="URL de la imagen">

        <input type="text" id="code" name="code" required placeholder="Code">

        <input type="number" id="stock" name="stock" required placeholder="stock">

        <select id="productStatus" name="status" required>
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>

        <button type="submit">Add Product</button>
    </form>
</section>
<section class="section_premium_products">
    <h2>Your Products: </h2>
    <div id="container_premium"></div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
<script src="/js/premium-pannel.js"></script>