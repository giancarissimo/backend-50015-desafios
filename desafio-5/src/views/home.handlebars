{{> header}}
{{>headerScrolledPage}}
<main>
    <div class="navbar_promos">
        <p>Get $200-$640 in credit toward iPhone 14 or iPhone 14 Pro when you trade in iPhone 11 or higher.</p>
    </div>
    <section class="section_home">
        <div class="contrainer_title_home">
            <h1>Welcome to iStore. <span>The best way to buy the <br>products you love.</span></h1>
        </div>
        <div class="container_homeProducts">
            {{#each products}}
            {{#if status}}
            <div class="productCard">
                {{#if stock}}
                <span class="productCard_inStock">IN STOCK</span>
                {{else}}
                <span class="productCard_outOfStock">OUT OF STOCK</span>
                {{/if}}
                <h3>{{title}}</h3>
                <img class="productCard_img" src="../assets/images/store/{{thumbnails}}" alt={{title}}></img>
                <div class="productCard_info">
                    <div class="productCard_info_text">
                        <h4>From ${{price}}</h4>
                    </div>
                    <button class="productCard_info_button" id={{id}}>Buy</button>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </section>
</main>
{{>footer}}
