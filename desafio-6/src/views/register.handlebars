<section class="section_register">
    <div class="register_container">
        <div class="registerTitle_container">
            <h1>Create your iStore Account</h1>
        </div>
        <form action="/api/users" method="post">
            <div class="input_container_total">
                <span class="input_error">{{errors.username}}</span>
                <div class="input_container">
                    <input class="input" id="username" type="text" name="username" placeholder="" autoComplete="off">
                    <span class="input_placeholder">Username</span>
                    <div class="input_iconError"></div>
                </div>
            </div>
            <div class="input_container_total">
                <span class="input_error">{{errors.first_name}}</span>
                <div class="input_container">
                    <input class="input" id="first_name" type="text" name="first_name" placeholder=""
                        autoComplete="off">
                    <span class="input_placeholder">First Name</span>
                    <div class="input_iconError"></div>
                </div>
            </div>
            <div class="input_container_total">
                <span class="input_error">{{errors.last_name}}</span>
                <div class="input_container">
                    <input class="input" id="last_name" type="text" name="last_name" placeholder="" autoComplete="off">
                    <span class="input_placeholder">Last Name</span>
                    <div class="input_iconError"></div>
                </div>
            </div>
            <div class="input_container_total">
                <span class="input_error">{{errors.email}}</span>
                <div class="input_container">
                    <input class="input" id="email" type="email" name="email" placeholder="" autoComplete="off">
                    <span class="input_placeholder">Email Address</span>
                    <div class="input_iconError"></div>
                </div>
            </div>
            <div class="input_container_total">
                <span class="input_error">{{errors.password}}</span>
                <div class="input_container">
                    <input class="input" id="password" type="password" name="password" placeholder=""
                        autoComplete="off">
                    <span class="input_placeholder">Password</span>
                    <div class="input_iconError"></div>
                </div>
                <div class="show_password_container">
                    <input type="checkbox" id="showPasswordCheckbox">
                    <label>Show Password</label>
                </div>
            </div>
            <div class="input_container_total">
                <span class="input_error">{{errors.age}}</span>
                <div class="input_container">
                    <input class="input" id="age" type="number" name="age" placeholder="" autoComplete="off">
                    <span class="input_placeholder">Age</span>
                    <div class="input_iconError"></div>
                </div>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
</section>
<script src="/js/login-register.js"></script>