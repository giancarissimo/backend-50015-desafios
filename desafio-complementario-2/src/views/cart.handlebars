{{> header}}
<section class="section_cart">
    <h1>Cart Details</h1>
    <span>cart ID: {{cartId}}</span>
    {{#if products}}
    <ul class="cart_productList">
        {{#each products }}
        <li>
            <p>Product title: {{this.product.title}}</p>
            <p>Category: {{this.product.category}}</p>
            <p>Price: ${{this.product.price}}</p>
            <p>Quantity: {{this.quantity}}</p>
        </li>
        {{/each}}
    </ul>
    {{/if}}
    {{#unless products}}
    <span>Your Bag is empty.</span>
    {{/unless}}
</section>
<script src="/js/header.js"></script>